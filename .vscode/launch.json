{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch MCP Server (HTTP Mode)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/main.js",
      "runtimeArgs": ["--env-file=.env"],
      "env": {
        "MCP_MODE": "http",
        "PORT": "3000",
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "npm: build",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "serverReadyAction": {
        "pattern": "Yahoo Developer MCP Server running on http://localhost:(\\d+)",
        "uriFormat": "http://localhost:%s/swagger",
        "action": "openExternally"
      },
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Launch MCP Server (Stdio Mode)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/main.js",
      "runtimeArgs": ["--env-file=.env"],
      "env": {
        "MCP_MODE": "stdio"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "npm: build",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Attach to MCP Server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Launch Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--detectOpenHandles",
        "--forceExit"
      ],
      "env": {
        "NODE_ENV": "test",
        "YAHOO_APP_ID": "test_app_id"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "npm: build",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
