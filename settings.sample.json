{
    "mcpServers": {
        "yahoo-developer-stdio": {
            "command": "node",
            "args": [
                "--env-file=.env",
                "dist/main.js"
            ],
            "cwd": "path/to/yahoo-developer-mcp",
            "env": {
                "MCP_MODE": "stdio"
            }
        },
        "yahoo-developer-http": {
            "transport": {
                "type": "http",
                "baseUrl": "http://localhost:3000/mcp"
            },
            "auth": {
                "type": "bearer",
                "token": "your_yahoo_app_id_here"
            }
        }
    }
}